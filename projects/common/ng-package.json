{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/common",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "input": "src/assets",
      "glob": "**/*",
      "output": "assets"
    },
    {"input": "src/lib", "glob": "**/*.scss", "output": "styles"}
  ]
}