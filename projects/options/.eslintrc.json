{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "rules": {
        "@angular-eslint/template/label-has-associated-control": [
          "error",
          {
            "checkIds": false,
            "controlComponents": [
              "input",
              "meter",
              "output",
              "progress",
              "select",
              "textarea",
              "mat-radio-group"
            ],
            "labelComponents": [
              {"inputs": ["for", "htmlFor"], "selector": "label"}
            ]
          }
        ]
      }
    }
  ]
}
